{
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "autoApprove": true,
      "automerge": true
    }
  ],
  "nix": {
    "enabled": true,
    "fileMatch": ["(^|/)flake\\.nix$", "(^|/)dev/flake\\.nix$"]
  },
  "lockFileMaintenance": {
    "enabled": true
  }
}
